@using SSDI.RequestMonitoring.UI.Contracts.Requests
@using SSDI.RequestMonitoring.UI.Contracts.Requests.Common
@using SSDI.RequestMonitoring.UI.Contracts.Requests.Purchase
@using SSDI.RequestMonitoring.UI.JComponents.Forms
@using SSDI.RequestMonitoring.UI.JComponents.Modals

  
@if (IsModalVisible)
{
    <div class="modal__overlay">
        <div class="modal">
            <div class="modal__header">
                <h5 class="modal__header-title">NEW REQUISITION SLIP / ADVANCES SUBJECT TO LIQUIDATION</h5>
            </div>

            <div class="modal__alert">
                <Alert Message="@AlertMessage" Type="@CurrentAlertType" ShowCloseButton="false" @bind-IsVisible="@IsShowAlert" />
            </div>

            <RequestRequisition__Form FormModel="@Model"
            OnValidSubmit="@HandleSave" 
            OnCloseModal="@CloseModal" 
            ConfirmModal="@ConfirmModal"
            OnShowAlert="@_onShowAlertCallback"
            IsDisabledBtns="@_isDisabledBtns" 
            SelectedFiles="@Attachments"
            BusinessUnitCode="@RequestHeader?.BusinessUnitCode" />
        </div>
    </div>            
}