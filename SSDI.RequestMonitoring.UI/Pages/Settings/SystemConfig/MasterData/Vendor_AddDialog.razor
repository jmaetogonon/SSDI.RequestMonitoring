@using SSDI.RequestMonitoring.UI.Contracts.MasterData
@using SSDI.RequestMonitoring.UI.JComponents.Loading
@using SSDI.RequestMonitoring.UI.JComponents.Modals

@inject IVendorSvc vendorSvc

 <div class="modal__overlay" id="@(IsModalVisible ? "show__new__vendor-modal" : "hide__new__vendor-modal")">
    <div class="modal">
        <div class="modal__header">
            <h5 class="modal__header-title">NEW VENDOR </h5>
        </div>

        <div class="modal__alert">
            <Alert Message="@AlertMessage" Type="AlertType.error" ShowCloseButton="false" @bind-IsVisible="IsShowAlert" />
        </div>

        <EditForm Model="FormModel" OnValidSubmit="HandleSave">
            <DataAnnotationsValidator />
            <div class="modal__body">
                <div class="modal__form-group position-relative">

                    <div class="form-group full-width">
                        <label for="vendorName">Vendor</label>
                        <InputText id="vendorName" class="form-control" @bind-Value="FormModel.Vendor_Name" required />
                    </div>

                    <div class="form-group full-width">
                        <label for="vendorPayDetails">Payment Details</label>
                        <InputTextArea id="vendorPayDetails" class="form-control" @bind-Value="FormModel.Payment_Details" required Rows="3" />
                    </div>
                </div>
            </div>
            <div class="modal__footer">
                <button type="button" class="modal__footer-btn modal__footer-btn-cancel" @onclick="CloseModal">Cancel</button>
                <button type="submit" class="modal__footer-btn modal__footer-btn-save"> Save </button>
            </div>
        </EditForm>
    </div>
</div>